@using NguyenQuocAn.Models

@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}
@{
    SanPham temp = (SanPham)ViewBag.MaSP;
}
    <div class="banner-bootom-w3-agileits py-5">
        <div class="container py-xl-4 py-lg-2">
            <!-- tittle heading -->
            <!-- //tittle heading -->
            <div class="row">
                <div class="col-lg-5 col-md-8 single-right-left ">
                    <div class="thumb-image" style="display:flex;">
                        <img src="@Url.Content("~/Content/images/"+temp.HinhAnh)" data-imagezoom="true" class="img-fluid" alt="" draggable="false" style="margin:auto">
                    </div>
                </div>

                <div class="col-lg-7 single-right-left simpleCart_shelfItem">
                    <h3 class="mb-3">@temp.TenSP</h3>
