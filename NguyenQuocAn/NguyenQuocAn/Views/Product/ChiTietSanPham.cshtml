                    <div class="occasion-cart" style="margin-top:10px;">
                        <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                            <form action="#" method="post">
                                <fieldset>
                                    <div class="button btn" style="background-color:#0c8ae4">
                                        <a href="@Url.Action("ThemGiohang","Giohang",new{@MaSP=temp.MaSP, @strURL=Request.Url.ToString()})" name="submit" value="Add to cart" class="button btn" style="color:#fff; display:block;">ADD TO CART</a>
